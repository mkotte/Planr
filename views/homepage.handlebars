<body>

  <img src="./assets/img/Planr_Logo_02.png">
  <h1> Project Management Made Easy </h1>

  <div class="row">
    <div class="col-6 p-1">
      <!-- Button trigger modal -->
      <button type="button" id="signup" class="btn btn-outline-light p-1" data-bs-toggle="modal" data-bs-target="#signUpModal">
        Sign up
      </button>
    </div>

    <div class="col-6 p-1 ">
      <!-- Button trigger modal -->
      <button type="button" id="login" class="btn btn-outline-light p-1" data-bs-toggle="modal" data-bs-target="#Login">
        Log In
      </button>
    </div>
  </div>
  

    

</body>

  <!--Sign Up Modal -->
  <div class="modal fade" id="signUpModal" tabindex="-1" aria-labelledby="signUpModal" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="signUpModalLabel">Join today!</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="usernameSignUp">Username</label>
            <input type="input" class="form-control" id="usernameSignUp" placeholder="username">
          </div>
          <div class="form-group">
            <label for="emailSignUp" class="col-form-label">Email</label>
            <input type="email" class="form-control" id="emailSignUp" placeholder="Password">
          </div>
          <div class="form-group">
            <label for="inputPassword" class="col-form-label">Password</label>
            <input type="password" class="form-control" id="newPassword" placeholder="Password">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary signup-form">Submit</button>
        </div>
      </div>
    </div>
  </div>

  <!--  Log InModal -->
  <div class="modal fade" id="Login" tabindex="-1 " aria-labelledby="Login" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="Login">Welcome Back!</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="emailLogIn" class="col-form-label">Email</label>
            <input type="email" class="form-control" id="emailLogIn" placeholder="example@mail.com">
          </div>
          <div class="form-group">
            <label for="inputPassword" class="col-form-label">Password</label>
            <input type="password" class="form-control" id="inputPassword" placeholder="password">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary login-form">Log in</button>
        </div>
      </div>
    </div>
  </div>
